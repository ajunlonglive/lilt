{
  "name": "lilt/lilt",
  "description": "lilt php code library",
  "homepage": "https://github.com/lilt-php/lilt",
  "license": "MIT",
  "authors": [
    {
      "name": "lilty",
      "email": "ylilt71@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/lilt-php/lilt/issues"
  },
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5",
    "friendsofphp/php-cs-fixer": "~1.9"
  },
  "autoload-dev": {
    "psr-4": {
      "": "test/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit -c phpunit.xml.dist",
    "post-update-cmd": [
      "phpize && ./configure --enable-lilt && make && make install && make clean && phpize --clean"
    ]
  }
}
